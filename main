class Game:
    '''main class.
every object should be craated here'''
    def __init__(self):
        self.window = Tk()
        self.window.title('Game Shop')
        self.canvas = Canvas(self.window, width =800, height =  600, bg = 'blue')
        self.canvas.pack()
        
        background = Background(self.canvas,'download.png')
        background.setBackground()
        #pack everything!
        self.mainLoop()

    def mainLoop(self):
        while(True):  
            print (self.window.winfo_pointerxy())
            self.window.update_idletasks()
            self.window.update()


    
if __name__ == '__main__':
    game = Game()
