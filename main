class Vector():
    def __init__(self,x, y):
        self.x = x
        self.y = y

    #size = Vector(50,10)


class Background():
    '''class for creating backgrounds for scenes'''
    def __init__(self,canvas, image):
        self.image = image
        self.canvas = canvas

    def setBackground(self):
        '''sets background image on (0,0) position'''
        bg = PhotoImage(file = self.image)
        self.canvas.create_image(0, 0, image = bg, anchor = NW)
        self.canvas.configure(bg="white")

